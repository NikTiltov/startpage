---
interface Props {
    href: string;
}

const { href } = Astro.props;
---

<li>
    <a href={href}>
        /<slot />_
    </a>
</li>

<style>
    a {
        font-weight: 400px;
        color: var(--color-fg);
        position: relative;
    }

    a::before {
        content: "";
        position: absolute;
        display: block;
        width: 100%;
        height: 2px;
        bottom: 0px;
        left: 0px;
        background-color: var(--color-fg);
        opacity: 0;
        transition: opacity 300ms, transform 300ms;
    }

    a:hover::before {
        opacity: 1;
        transform: translateY(0.2em);
    }

    a::selection {
        color: var(--color-bg);
        background-color: var(--color-fg);
    }
</style>
